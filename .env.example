# Rhymix Development Environment Configuration

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# MariaDB Database Configuration
DB_ROOT_PASSWORD=rootpass123
DB_DATABASE=rhymix
DB_USER=rhymix
DB_PASSWORD=rhymix123
DB_HOST=rhymix_db
DB_PORT=3306

# =============================================================================
# RHYMIX CONTAINER SETTINGS
# =============================================================================
# Container Names
RHYMIX_CONTAINER_NAME=rhymix-dev
DB_CONTAINER_NAME=rhymix_db

# Port Mappings
RHYMIX_HTTP_PORT=4001
RHYMIX_HTTPS_PORT=4443
DB_PORT_EXTERNAL=3306

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================
# SSL Configuration (for production, change to your domain)
SSL_DOMAIN=localhost
SSL_EMAIL=admin@localhost

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Environment
NODE_ENV=development
DEBUG=true

# File Permissions
RHYMIX_USER=www-data
RHYMIX_GROUP=www-data

# =============================================================================
# NGINX SETTINGS
# =============================================================================
# NGINX Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
CLIENT_MAX_BODY_SIZE=100M

# =============================================================================
# VOLUMES AND PATHS
# =============================================================================
# Local development paths (relative to docker-compose.yml)
RHYMIX_SRC_PATH=./rhymix/www/html
NGINX_CONFIG_PATH=./rhymix/nginx/conf.d
SSL_CERTS_PATH=./rhymix/ssl
LOGS_PATH=./rhymix/logs